{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "aptPackages": [
                        "nodejs",
                        "npm"
                    ]
                },
                "install": {
                    "cmds": [
                        "composer install --optimize-autoloader --no-scripts --no-interaction",
                        "npm install"
                    ]
                },
                "build": {
                    "cmds": [
                        "npm run build"
                    ]
                }
            }
        }
    }
}